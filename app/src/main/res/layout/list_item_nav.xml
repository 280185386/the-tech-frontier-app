<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    android:background="@drawable/selectabel_nav_item"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="55dip"
    android:gravity="center_vertical"
    android:paddingBottom="7.5dip"
    android:paddingTop="7.5dip"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/img"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="21dip"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:clickable="false"
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="21dip"
        android:layout_marginRight="21dip"
        android:layout_toRightOf="@id/img"
        android:gravity="center"
        android:text="hello"
        android:textColor="@color/drawer_text_color" />
</RelativeLayout>